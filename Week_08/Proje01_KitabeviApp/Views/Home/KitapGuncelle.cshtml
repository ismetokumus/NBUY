@model Kitap
@{
    ViewData["Title"] = "KitapGuncelle";
}


<h1 class="display-6">Kitap Güncelle</h1>
<hr>
<form asp-controller="Home" asp-action="KitapGuncelle"  method="post">
    <div class="row mb-2">
        <div class="col-2">
            <label class="form-label" asp-for="Ad" ></label>
        </div>
        <div class="col-4">
            <input class="form-control" type="text" asp-for="Ad">
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-2">
            <label class="form-label" asp-for="BasimYili" ></label>
        </div>
        <div class="col-4">
            <input class="form-control" type="text" asp-for="BasimYili">
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-2">
            <label class="form-label" asp-for="SayfaSayisi" ></label>
        </div>
        <div class="col-4">
            <input class="form-control" type="text" asp-for="SayfaSayisi">
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-2">
            <label class="form-label" asp-for="Ozet" ></label>
        </div>
        <div class="col-4">
            <input class="form-control" type="text" asp-for="Ozet">
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-2">
            <label class="form-label">Kategori</label>
        </div>
        <div class="col-4">
            <select asp-for="KategoriId" class="form-select">
                <option selected >Kategori Seçiniz</option>
                @foreach (var kategori in ViewBag.kategoriler)
                {
                    <option value=@kategori.Id>@kategori.Ad</option>
                }
            </select>
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-2">
            <label class="form-label">Yazar</label>
        </div>
        <div class="col-4">
            <select asp-for="YazarId" class="form-select" aria-label="Default select example" >
                <option selected>Yazar Seçiniz</option>
                @foreach (var yazar in ViewBag.Yazarlar)
                {
                    <option value=@yazar.Id>@yazar.Ad</option>
                }
                
                
            </select>
        </div>
    </div>

    <div class="row mb-2">

        <div class="col-4 offset-2">
            <input class="btn btn-primary" type="submit" value="Güncelle">
        </div>
    </div>
</form>