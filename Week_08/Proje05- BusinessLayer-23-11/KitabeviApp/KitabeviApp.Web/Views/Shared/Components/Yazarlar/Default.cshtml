@model List<Yazar>
<div class="list-group">
    <div class="px-2">
        <h1 class="display-6 fs-3  text-primary fw-normal">Yazarlar</h1>
    </div>
    @foreach (var y in Model)
    {
        <a asp-controller="Home" asp-action="YazaraGoreKitapListesi" asp-route-id=@y.Id class="list-group-item list-group-item-action @(ViewBag.SecilenYazar == y.Id ? "active" : "")">
            @y.Ad
        </a>
    }
</div>