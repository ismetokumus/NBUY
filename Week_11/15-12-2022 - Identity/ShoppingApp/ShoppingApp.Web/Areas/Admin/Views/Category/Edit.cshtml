@using ShoppingApp.Entity.Concrete;
@model CategoryUpdateDto
<h1>Kategori Düzenleme</h1>
<hr />
<form asp-area="Admin"
      asp-controller="Category"
      asp-action="Edit"
      method="post">
      <input type="hidden" name="Id" value="@Model.Id" />
    <div class="row">
        <div class="col-12 col-lg-6 col-md-8 col-sm-10">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input class="form-control" asp-for="Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Url" class="form-label"></label>
                <input class="form-control" asp-for="Url">
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-sm">Değişiklikleri Kaydet</button>
            @{
                Category category = new Category
            {
                Id = Model.Id,
                Name = Model.Name
            };
            }
            @await Html.PartialAsync("_CategoryDeletePartial", category)
            
            <a type="button" class="btn btn-light btn-sm"
               asp-area="Admin"
               asp-controller="Category"
               asp-action="Index"
            >Vazgeç</a>
        </div>
    </div>
</form>