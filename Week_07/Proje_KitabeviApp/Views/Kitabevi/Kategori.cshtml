@model List<Kategori>
@{
    ViewData["Title"] = "Kategori";
}

<h1 class="display-6">Kategori Listesi</h1>
<hr>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kategori Adı</th>
            <th>Açıklama</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.Id</td>
                <td>@k.Ad</td>
                <td>@k.Aciklama</td>
            </tr>
        }
    </tbody>
</table>