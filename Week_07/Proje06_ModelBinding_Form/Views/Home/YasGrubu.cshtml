@{
    ViewData["Title"] = "YasGrubu";
}

<h1>Yas Grubu Hesaplama</h1>
<hr>

<form asp-controller="Home" asp-action="YasGrubu" method="post">
    <label class="form-label">Yas</label>
    <input type="text" name="yas" class="form-control" id="">
    <label class="form-label">Ad</label>
    <input type="text" name="ad" class="form-control" id="">

    <input type="submit" value="Hesapla" class="btn btn-primary mt-3">
</form>
@if (@ViewBag.YasGrubu != null)
{
    <div class="mt-3 alert alert-success">@ViewBag.YasGrubu</div>
}
